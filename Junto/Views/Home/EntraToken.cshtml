@model Junto.Models.Usuario
@{
	ViewBag.Title = "Entra Com Token";
}

<section class="content">

	@using (Html.BeginForm("EntraToken", "Home", FormMethod.Post))
	{
		<div></div>
		<div>Acessar com o token gerado, pegar na base de dados, válido por 1 minuto</div>
		<div></div>

		@Html.AntiForgeryToken()
		<div class="form-group row">
			@Html.ValidationMessageFor(model => model.strMatricula, "", new { @class = "text-danger" })
			<div class="col-sm-3">
				<label for="Nome">Matricula</label>
				@Html.EditorFor(model => model.strMatricula, new { htmlattributes = new { @class = "form-control form-cnotrol-sm" } })
			</div>
		</div>
		<div class="form-group row">
			@Html.ValidationMessageFor(model => model.strToken, "", new { @class = "text-danger" })
			<div class="col-sm-3">
				<label for="Nome">Token</label>
				@Html.EditorFor(model => model.strToken, new { htmlattributes = new { @class = "form-control form-cnotrol-sm" } })
			</div>
		</div>
		<div class="form-group row">
			<div class="col-sm-1">
				<button type="submit" class="btn btn-primary btn-sm" style="padding-bottom:7px;">Entrar</button>
			</div>

		</div>
	}
</section>