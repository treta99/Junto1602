@model Junto.Models.Usuario
@{
	ViewBag.Title = "Login";
}

<section class="content">

	@using (Html.BeginForm("Login", "Home", FormMethod.Post))
	{

		<div>
			Entrar com a matricula, gerar o token ou cadastrar um novo usuário
		</div>
		<div></div>
		<div></div>

		@Html.AntiForgeryToken()
		<div class="form-group row">
			@Html.ValidationMessageFor(model => model.strMatricula, "", new { @class = "text-danger" })
			<div class="col-sm-3">
				<label for="Nome">Matricula</label>
				@Html.EditorFor(model => model.strMatricula, new { htmlattributes = new { @class = "form-control form-cnotrol-sm" } })
			</div>
		</div>
		<div class="form-group row">
			<div class="col-sm-3">
				<label for="Nome">Senha</label>
				@Html.EditorFor(model => model.strSenha, new { htmlattributes = new { @class = "form-control form-cnotrol-sm" } })
				@Html.ValidationMessageFor(model => model.strSenha, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group row">

			<div class="col-sm-2">
				<button type="submit" class="btn btn-primary btn-sm" style="padding-bottom:7px;">Entrar</button>
			</div>

			<div class="col-sm-2">
				<a href="@Url.Action("GeraToken","Home")" class="btn btn-dark" role="button"> Esqueci a senha</a>
			</div>
			<div class="col-sm-2">
				<a href="@Url.Action("Cadastro","Home")" class="btn btn-dark" role="button"> Cadastrar Novo</a>
			</div>
		</div>
	}
</section>