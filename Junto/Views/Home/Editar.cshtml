@model Junto.Models.Usuario
@{
	ViewBag.Title = "Cadastro";
}

<section class="content">

	@using (Html.BeginForm("Editar", "Home", FormMethod.Post))
	{

		<div></div>
		<div>Editar o registro</div>
		<div></div>

		@Html.AntiForgeryToken()

		@Html.HiddenFor(model => model.idUsuario)
		<div class="form-group row">
			@Html.ValidationMessageFor(model => model.strMatricula, "", new { @class = "text-danger" })
			<div class="col-sm-3">
				<label for="Nome">Matricula</label>
				@Html.EditorFor(model => model.strMatricula, new { htmlattributes = new { @class = "form-control form-cnotrol-sm" } })
			</div>
		</div>
		<div class="form-group row">
			<div class="col-sm-3">
				<label for="Nome">Senha</label>
				@Html.EditorFor(model => model.strSenha, new { htmlattributes = new { @class = "form-control form-cnotrol-sm" } })
				@Html.ValidationMessageFor(model => model.strSenha, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group row">
			@Html.ValidationMessageFor(model => model.strEmail, "", new { @class = "text-danger" })
			<div class="col-sm-3">
				<label for="Nome">E-mail</label>
				@Html.EditorFor(model => model.strEmail, new { htmlattributes = new { @class = "form-control form-cnotrol-sm" } })
			</div>
		</div>
		<div class="form-group row">
			@Html.ValidationMessageFor(model => model.strNome, "", new { @class = "text-danger" })
			<div class="col-sm-3">
				<label for="Nome">Nome</label>
				@Html.EditorFor(model => model.strNome, new { htmlattributes = new { @class = "form-control form-cnotrol-sm" } })

			</div>
		</div>
		<div class="form-group row">
			<div class="col-sm-1">
				<button type="submit" class="btn btn-primary btn-sm" style="padding-bottom:7px;">Entrar</button>
			</div>
		</div>
	}
</section>